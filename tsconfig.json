{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~comments/*": ["comments/*"],
      "~dtos/*": ["dtos/*"],
      "~config/*": ["config/*"],
      "~entities/*": ["entities/*"],
      "~error/*": ["error/*"],
      "~middleware/*": ["middleware/*"],
      "~movies/*": ["movies/*"],
      "~omdb/*": ["omdb/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
